<!DOCTYPE html>
<html>
<head>
    <% if(returning == true){ %>
    <script type="text/javascript" src="../js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="../js/userScripts.js"></script>
    <script type="text/javascript" src="../js/listingScripts.js"></script>
    <script src="../vendor/jquery/jquery.min.js"></script>
    <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../vendor/bootstrap/css/bootstrap.min.css">
    <% } else { %>
    <script type="text/javascript" src="./js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="./js/userScripts.js"></script>
    <script type="text/javascript" src="./js/listingScripts.js"></script>
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.min.css">
    <% } %>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>

<body id="divResults">
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark tab-content-top">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/fa17g12/" style="font-size: 20px; background-color: Black">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="./index.html" style="font-size: 20px; color: white">About</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <% if(login === false) { %>
                <li class="nav-item">
                    <a class="btn btn-primary" style="padding: 8px 18px" href="api/login">Sign In</a>
                </li>
                <% } else { %>
                <li class="nav-item">
                    <a class="btn btn-primary" style="padding: 8px 18px" href="api/logout">Logout</a>
                </li>
                <% } %>
                <li class="nav-item">
                    <a class="btn btn-primary" style="padding: 8px 18px; margin-left: 10px;" href="api/signup">Sign up</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<% if (typeof isSeller !== 'undefined' && isSeller !== '0') { %>
<p><a href="api/listings">All Listings</a></p>
<% } %>

<!-- Page Content -->
<div class="container">
    <!-- Page Heading -->
    <div class="my-4">
        <center>
            <form method="post" action="" id="search_form">
                <input style="padding: 10px 18px; width: 60%" type="text" placeholder="Street Address, City, State, Zip" id="listingSearch" name="search" onkeydown="return searchListingEnter(event)" maxlength="40" value ="">
                <input style="padding: 10px 18px ; " type="button" class="btn btn-info"value="Search" id="listingSearchBtn" onClick="searchListing()">
            </form>
        </center>
    </div>

    <div class="page-data">
        <ul class="err-area" id="err-area"></ul>
    </div>

    <!--listing-->
    <% if(data.length){ %>
    <div class="row">
        <% for(var i = 0;i < data.length;i++) { %>
        <tr>
            <div class="col-lg-4 col-sm-6 portfolio-item" style="margin-bottom: 5px">
                <div class="card h-100">
                    <% if(returning == true){ %>
                    <td><a href="#" onClick="listingDescription(<%= data[i].listing_id %>)"><img class="card-img-top" src="../public/<%= data[i].image %>" alt="House image"></a></td>
                    <% } else { %>
                    <td><a href="#" onClick="listingDescription(<%= data[i].listing_id %>)"><img class="card-img-top" src="./public/<%= data[i].image %>" alt="House image"></a></td>
                    <% } %>
                    <div class="card-body">
                        <p class="card-text">
                            <label style="margin-right: 2px">Address:</label>
                        <td><%= data[i].address %></td><br>
                        <label style="margin-right: 31px">City:</label>
                        <td><%= data[i].city %></td><br>
                        <label style="margin-right: 22px">State:</label>
                        <td><%= data[i].state %></td><br>
                        <label>ZipCode:</label>
                        <td><%= data[i].zip_code %></td><br>
                        </p>
                        <td><input type="button" value="See More" onClick="listingDescription(<%= data[i].listing_id %>)"></td>
                    </div>
                </div>
            </div>
        </tr>
        <% } %>
    </div>
</div>>
<% }else{ %>
<tr><td colspan="6">No Data</td></tr>
<% } %>
<!-- Footer -->
<div class="py-5 bg-dark" style="position: relative; left: 0; right: 0; bottom: 0">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
    </div>
</div>

<script type="text/javascript">
    getSearchString()
</script>

<% returning = false; %>

</body>
</html>