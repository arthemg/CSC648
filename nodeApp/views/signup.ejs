<!-- views/signup.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script type="text/javascript" src="./../js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="./../js/userScripts.js"></script>
    <link rel="stylesheet" href="./../css/style.css">
    <style>
        body 		{ padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <!--<div class="page-data">-->
        <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Signup</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>


        <form method="post" action="" id="the-form">
            <div class="form-group">
                <label>First Name</label>
                <input type="text" class="form-control" id="fname" name="fname1">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" class="form-control" id="lname" name="lname1">
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input type="text" class="form-control" id="phone" name="phone1">
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" id="email" name="email1">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" id="password" name="password1">
            </div>

            <div class="form-group">
                 <label>Are you RealEstate Agent or Private Seller?</label>
                <input type="checkbox"  name="seller1" id="seller">

             <input type="text" placeholder="Please Enter your RealEstate Licence or Driver's License" class="form-control" name="license1" id="license">

            </div>
            <input type="button" class="btn btn-warning btn-lg" value="Submit" onclick="registerNewUser()">
        </form>

        <hr>

        <p>Already have an account? <a href="/fa17g12/api/login">Login</a></p>
        <p>Or go <a href="/fa17g12/">home</a>.</p>
    </div>

</div>

<div class="page-data">
    <ul class="err-area"></ul>
</div>

</body>
</html>
